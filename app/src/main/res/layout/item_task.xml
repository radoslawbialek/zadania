<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/itemTaskCompletionCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:minWidth="0dp"
        android:minHeight="0dp" />

    <TextView
        android:id="@+id/itemTaskNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/itemTaskCompletionCheckBox"
        android:layout_alignBottom="@id/itemTaskCompletionCheckBox"
        android:layout_toEndOf="@id/itemTaskCompletionCheckBox"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        tools:text="PrzykÅ‚adowe zadanie" />

    <View
        android:id="@+id/itemTaskPriorityView"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/itemTaskCompletionCheckBox"
        android:layout_alignBottom="@id/itemTaskCompletionCheckBox"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:background="@color/red_700" />

</RelativeLayout>